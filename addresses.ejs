<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= addresses[selectedAddr].addr.substring(0,12) %>... <span class="badge"><%= bundle.utility.weiToEth(addresses[selectedAddr].balance) %> eth</span> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <% addresses.forEach(function(address, i, array) { %>
      <li><a href="#" onclick="bundle.Main.selectAddress(<%= i%>);"><%= address.addr %> <span class="badge"><%= bundle.utility.weiToEth(address.balance) %> eth</span></a></li>
    <% }); %>
    <li role="separator" class="divider"></li>
    <li><a href="#" onclick="bundle.Main.createAddress()">New account</a></li>
    <li><a href="#" data-toggle="modal" data-target="#address_modal">Import account</a></li>
    <li><a href="#" onclick="bundle.Main.showPrivateKey()">Export private key</a></li>
    <li><a href="#" onclick="bundle.Main.deleteAddress()">Forget account</a></li>
    <li><a href="#" onclick="bundle.Main.logout()">Forget all accounts</a></li>
  </ul>
</div>
